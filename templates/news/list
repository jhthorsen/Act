[% WRAPPER ui title = loc("News") %]

[% IF news.size %]
<div class="newsbox">
  [% FOREACH n = news %]
  <h3><a href="[% n.link %]">[% n.title %]</a></h3>
  <em>[% date_format(n.datetime, 'datetime_short') %] {{by}} [% user_info(n.user) %]</em>
  <p>[% texts.${loop.index} %]</p>
  [% END %]
</div>
[% ELSE %]
<p>{{No news yet!}}</p>
[% END %]

[% END %]
