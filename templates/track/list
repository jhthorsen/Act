[% WRAPPER ui title = loc("Tracks") %]
[% IF tracks.size == 0 %]
<p>{{No track}}</p>
[% ELSE %]
<table class="table">
  <tbody>
  [% FOREACH tr = tracks %]
    <tr>
      <td><a href="[% make_uri('trackedit', 'track_id', tr.track_id) %]">[% tr.title %]</a></td>
      <td>
        [% loc('n talks',     tr.talks.total)     %]
        [%- IF tr.talks.total %],    [% loc('n accepted',  tr.talks.accepted)  %]
        [%- IF tr.talks.accepted %], [% loc('n confirmed', tr.talks.confirmed) %]
        [%- END; END %]
      </td>
    </tr>
  [% END %]
  </tbody>
</table>
[% END %]
<p>
  <a href="[% make_uri('trackedit') %]">{{Add a new track}}</a>
</p>
[% END %]
